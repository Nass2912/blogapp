{
  "name": "blog_manager",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "setup": "npm-run-all setup-rails setup-next",
    "setup-rails": "cross-env-shell \"cd blog_api && bundle install && rails db:create db:migrate db:seed\"",
    "setup-next": "cross-env-shell \"cd blog-frontend && npm install\"",
    "start-rails": "cd blog_api && rails s",
    "start-next": "cd blog-frontend && npm run dev",
    "start": "concurrently \"npm run start-rails\" \"npm run start-next\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "npm-run-all": "^4.1.5"
  }
}
